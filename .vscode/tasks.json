{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build nxt",
            "type": "shell",
            "command": [
                "cd ${workspaceFolder}/lejos/nxt/ && ./${input:nxtmodel}.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "build ev3",
            "type": "shell",
            "command": [
                "cd ${workspaceFolder}/lejos/ev3/ && ./BuildAndDeploy.sh legomindstorms.ev3.${input:ev3model}.${input:ev3mission}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean nxt",
            "type": "shell",
            "command": [
                "cd ${workspaceFolder}/lejos/nxt/src/main/java && ", 
                "find . -name '*.class' -type f -delete && ", 
                "find . -name '*.nxj' -type f -delete"],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean ev3",
            "type": "shell",
            "command": [
                "cd ${workspaceFolder}/lejos/ev3/ && ./Clean.sh"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "nxtmodel",
            "type": "pickString",
            "description": "Which Model?",
            "options": ["test", "ShooterBot", "RoboGator", "ColorSorter", "AlphaRex"]
        },
        {
            "id": "ev3model",
            "type": "pickString",
            "description": "Which Model?",
            "options": ["track3r", "spik3r", "r3ptar", "gripp3r", "ev3rstorm"]
        },
        {
            "id": "ev3mission",
            "type": "pickString",
            "description": "Which Mission?",
            "options": ["Mission01", "Mission02", "Mission03", "Mission04"]
        }
    ]
}
